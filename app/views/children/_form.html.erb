<%= form_for [:guardian, @child, @family] do |f| %>
  <%= f.fields_for :families do |family| %>
    <%= family.hidden_field :guardian_id, :value => params[:guardian_id] %><br>
    <%= family.hidden_field :child_id, :value => @child.id %>
    <%= family.select(:relationship_id, @relationship_options) %>
  <% end %>
  <%= f.inputs do %>
    <%= f.text_field :first_name %>
    <%= f.text_field :last_name %>
    <%= f.date_field :date_of_birth %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
