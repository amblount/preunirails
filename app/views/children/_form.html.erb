<%= semantic_form_for @child do |f| %>
  <%= f.inputs do %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :date_of_birth %>
    <%= f.fields_for @family do |family| %>
      <%= family.hidden_field :guardian_id, :value => params[:guardian_id] %><br>
      <%= family.hidden_field :child_id, :value => @child.id %>
      <%= family.label "Your relationship"%>
      <%= family.select(:relationship_id, @relationship_options) %><br>
    <% end %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
